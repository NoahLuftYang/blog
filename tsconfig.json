{
  "extends": "@stillmine/tsconfig/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "react-jsx",
    "jsxImportSource": "@emotion/react",
    "lib": ["DOM", "DOM.Iterable", "ES2020"],
    "module": "ES2020",
    "noEmit": true,
    "paths": {
      "@app/*": ["./src/*"]
    },
    "target": "ES2020"
  },
  "exclude": ["node_modules"],
  "include": ["next-env.d.ts", "remix.env.d.ts", "**/*.ts", "**/*.tsx"]
}
